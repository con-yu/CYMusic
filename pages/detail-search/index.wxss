/* pages/detail-search/index.wxss */
page {
  padding: 0 10px;
  padding-top: 54px;
}

/* 搜索框 */
.search {
  position: fixed;
  top: 0;
  left: 20rpx;
  right: 20rpx;
}

/* 热门搜索 */
.hot {
  padding: 10rpx;
}

.hot .list {
  display: flex;
  flex-wrap: wrap;
}

.hot .tag {
  font-size: 26rpx;
  background-color: rgba(0, 0, 0, 0.1);
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

/* 搜索建议 */
.suggest {
  padding: 20rpx 30rpx;
}

.suggest .title {
  color: #26ce8a;
  font-size: 30rpx;
  font-weight: 700;
}

.suggest .list-item {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.suggest .icon {
  width: 66rpx;
  margin-left: -20rpx;
}

.suggest .list-item .text {
  font-size: 28rpx;
}

/* 搜索结果 */
.result .title {
  margin: 20rpx;
  font-weight: 700;
  color: #26ce8a;
}

.result .tips{
  padding: 20rpx ;
  text-align: center;
  font-size: small;
  color: gray;
}